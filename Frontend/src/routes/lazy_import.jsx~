import { lazy } from "react";

const lazyNamed = (loader, name) =>
    lazy(() => loader().then(module => ({ default: module[name] })));

const lazyImport = {
    AuthPage: lazyNamed(() => import("../pages/AuthPage/AuthPage.jsx"), "AuthPage"),
    ChatPage: lazyNamed(() => import("../pages/ChatPage/ChatPage.jsx"), "ChatPage"),
    MainPage: lazyNamed(() => import("../pages/MainPage/MainPage.jsx"), "MainPage"),
    ProtectedRoute: lazyNamed(() => import("../components/ProtectedRoute/ProtectedRoute.jsx"), "ProtectedRoute")
};

export default lazyImport;